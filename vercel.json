{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/test",
      "dest": "api/test.ts"
    },
    {
      "src": "/api/health",
      "dest": "api/health.ts"
    },
    {
      "src": "/api/patients",
      "dest": "api/patients.ts"
    },
    {
      "src": "/api/db-test",
      "dest": "api/db-test.ts"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.ts"
    }
  ]
}